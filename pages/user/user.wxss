/* pages/user/user.wxss */
.page {
  background-color: white;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  vertical-align: middle;
  padding: 30px;
}


.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.weui-cell .weui-cell__hd image {
  margin-right: 16px;
  vertical-align: middle;
  width: 25px;
  height: 25px;
}

.weui-cells .weui-cell__bd .btn-share {
  line-height: 1.5;
  font-size: 17px;
  color: rgb(102, 102, 102);
  background-color: white;
  text-align: left;
  padding-left: 0;
}

.share {
  background-color: white;
}

.user-login {
  height: 56rpx;
  border: 2rpx solid#333;
  border-radius: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  margin-top: 12rpx;
  margin-left: 30rpx;
}

.user-name {
  height: 26rpx;
  line-height: 26rpx;
  font-size: 40rpx;
  margin-top: 12rpx;
  margin-left: 30rpx;
}


.btn {
  display:block;
  margin-left:auto;
  padding-left:0px;
  box-sizing:border-box;
  font-size:18px;
  line-height:0.7;
  border-radius:0;
  -webkit-tap-highlight-color:transparent;
  overflow:auto;
  text-align:left;
   /** 背景颜色透明 **/
  background-color:#00000000;
  /** 字重 **/
  font-weight: normal;
  }
  
.unlogin {
  line-height: 80rpx;
  border-radius: 20rpx;
  text-align: center;
  background: #26d60f;
  color: #fff;
  width: 90%;
  margin-top: 80rpx;
}

