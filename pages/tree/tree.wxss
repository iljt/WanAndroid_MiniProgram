/* pages/tree/tree.wxss */
.image {
  margin-right: 10px;
  margin-left:20rpx;
  vertical-align: middle;
  width: 22px;
  height: 22px;
}

.item-info {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.text {
  font-size: 40rpx;
  align-self: left;
  margin-left: 20rpx;
  margin-top: 0rpx;
  color: rgb(0, 0, 0);
  font-style:italic;
}

.line{
  border-top: 10rpx solid #f5f5f5;
  padding: 10rpx;
}
.content {
  display:flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.hotkey {
  border: 1rpx solid #52e027;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  margin: 10rpx 15rpx;
  font-size: 30rpx;
}