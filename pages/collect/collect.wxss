.article-wrapper {
  border-top: 10rpx solid #f5f5f5;
  padding: 20rpx;
}

.article-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.author {
  font-size: 22rpx;
  color: white;
  border: 1px solid #21bb13;
  background: #18be2e;
  border-radius: 8rpx;
  padding: 2rpx 5rpx;
}

.article-text {
  color: #666;
  font-size: 22rpx;
}

.title {
  font-size: 26rpx;
  color: #2c2c2c;
  padding: 20rpx;
}

.collect{
  width: 50rpx;
  height: 50rpx;
}
.center{
  height: 100%;
  width: 100%;
  position: fixed;/*定位*/
  text-align: center;/*文本居中*/
  display:flex;/*将对象作为弹性伸缩盒显示。（伸缩盒最新版本css3）*/
  flex-direction:column;/*属性决定主轴的方向垂直方向，起点在上沿*/
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}
